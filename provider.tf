##################################################################################
# TERRAFORM CONFIG
##################################################################################
terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.18.0"
    }
  }
}


##################################################################################
# PROVIDERS
##################################################################################
provider "aws" {
  profile = var.profile
  region  = var.region != "" ? var.region : "us-east-2"
}
